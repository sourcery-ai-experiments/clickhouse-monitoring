{
  "root": true,
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/no-unknown-property": "off"
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cn", "cva", "clsx"],
      "config": "tailwind.config.cjs"
    },
    "next": {
      "rootDir": ["app/*/"]
    }
  }
}
